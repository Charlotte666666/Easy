<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_shop_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <!-- 商品图片 -->
        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="@dimen/comment_avatar_size"
            android:layout_height="@dimen/comment_avatar_size"
            android:layout_margin="8dp"
            android:background="@drawable/bg_comment_avatar"
            android:src="@mipmap/bili_default_avatar"/>

        <!-- 顶部布局的时间-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginLeft="2dp"
                android:textSize="16sp"
                android:textColor="#cc564a"
                android:layout_marginTop="36dp"/>
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.8"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="#cc564a"
                android:layout_marginTop="36dp" />
        </RelativeLayout>

        <!-- 减 -->
        <ImageButton
            android:id="@+id/ib_goods_minus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/bg_btn_food_minus"
            android:layout_marginLeft="158dp"
            android:layout_gravity="center_vertical"/>

        <!-- 数量 -->
        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textColor="@color/easy_secondary_text"/>

        <!-- 加 -->
        <ImageButton
            android:id="@+id/ib_goods_add"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/food_button_add"/>
    </LinearLayout>

</android.support.v7.widget.CardView>