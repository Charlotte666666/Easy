<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <!--最新帖子的头部 -->
    <ImageView
        android:id="@+id/iv_new_post_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_newest"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/activity_main_newest_title"
        android:id="@+id/tv_new_title"
        android:layout_marginStart="9dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_new_post_icon" />
    <Button
        android:id="@+id/more_new_post"
        android:layout_width="46dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/activity_main_small_button_text"
        android:textSize="9sp"
        android:textColor="#fff"
        android:background="@drawable/bg_hot_btn"/>

</RelativeLayout>