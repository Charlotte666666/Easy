<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thh.easy.activity.NewPostActivity">

    <include
        layout="@layout/back_toolbar" />


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_main_more_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical">

            <include layout="@layout/main_hot_header" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_back_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ib_back_post"
            android:layout_width="@dimen/btn_fab_size"
            android:layout_height="@dimen/btn_fab_size"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/btn_fab_margins"
            android:layout_marginRight="@dimen/btn_fab_margins"
            android:background="@drawable/btn_fab_default"
            android:elevation="@dimen/default_elevation"
            android:src="@mipmap/ic_add_white_48dp"
            app:borderWidth="0dp"
            app:fabSize="normal" />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
