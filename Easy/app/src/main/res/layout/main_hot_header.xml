<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:id="@+id/rl_post_hot_view"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!--最热帖子的头部 -->
    <ImageView
        android:id="@+id/iv_hot_post_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_hotest"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/activity_main_hotest_title"
        android:id="@+id/tv_hot_title"
        android:layout_marginStart="9dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_hot_post_icon" />

</RelativeLayout>